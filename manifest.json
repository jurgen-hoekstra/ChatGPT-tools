{
  "name": "Chat Exporter",
  "version": "1.0",
  "manifest_version": 3,
  "description": "An extension to extract and copy ChatGPT chat logs to clipboard or download as a file.",
  "host_permissions": ["https://chat.openai.com/*"],
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "popup.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
